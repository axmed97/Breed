<section class="blog-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="main_title">
                    <p class="top_text">Our blog <span></span></p>
                    <h2>
                        Latest Story From <br>
                        Our Blog
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Blogs)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog">
                        <div class="thumb">
                            <img class="img-fluid" src="@item.ImageUrl" alt="">
                        </div>
                        <div class="short_details">
                            <div class="meta-top d-flex">
                                <a href="#"><i class="ti-user"></i> Admin post</a>
                                <a href="#"><i class="ti-calendar"></i> @item.ShareDate.ToString("MMM dd, yyyy")</a>
                            </div>
                            <a class="d-block" href="single-blog.html">
                                <h4>@item.Header</h4>
                            </a>
                            <div class="text-wrap">
                                <p>
                                    @item.Description
                                </p>
                            </div>
                            <a href="#" class="primary_btn2">Learn More</a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>


<section class="brands-area section_gap_bottom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="owl-carousel brand-carousel">

                    @foreach (var item in Model.Brands)
                    {
                        <div class="single-brand-item d-table">
                            <div class="d-table-cell">
                                <img src="@item.ImageUrl" alt="">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>